{
    "general-settings": {
        "verbose": 2
    },
    "data-channels": {
        "mdump-channel": {
            "enabled": true,
            "zmq-address": "tcp://127.0.0.1:5555",
            "name": "DATA",
            "publishes-per-batch": 1,
            "publishes-ignored-after-batch": 0,
            "num-events-in-circular-buffer": 5,
            "processors": [
                {
                    "processor": "MdumpProcessor",
                    "command": "$(MIDASSYS)/bin/mdump -l 1 -z SYSTEM",
                    "period-ms": 10,
                    "detector-mapping-file": "$(UNPACKING_ROOT)/python/detector_mapping.json",
                    "multi-threading": true,
                    "num-workers": 5
                }
            ]
        },
        "odb-channel": {
            "enabled": true,
            "zmq-address": "tcp://127.0.0.1:5555",
            "name": "ODB",
            "publishes-per-batch": 1,
            "publishes-ignored-after-batch": 0,
            "num-events-in-circular-buffer": 2,
            "processors": [
                {
                    "processor": "ODBProcessor",
                    "command": "$(MIDASSYS)/bin/odbedit -c json -q",
                    "period-ms": 1000
                },
                {
                    "processor": "RunNumberProcessor",
                    "command": "$MIDASSYS/bin/odbedit -c 'ls -v \"/Runinfo/Run number\" ' -q",
                    "period-ms": 1000
                }
            ]
        },
        "histogram-channel": {
            "enabled": true,
            "zmq-address": "tcp://127.0.0.1:5555",
            "name": "HIST",
            "publishes-per-batch": 1,
            "publishes-ignored-after-batch": 0,
            "num-events-in-circular-buffer": 1,
            "processors": [
                {
                    "processor": "HistogramProcessor",
                    "period-ms": 1000
                }
            ]
        }
    }    
}
